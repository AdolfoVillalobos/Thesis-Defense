issn = {1573756X},
journal = {Data Mining and Knowledge Discovery},
keywords = {Classification,Deep learning,Review,Time series},
number = {4},
pages = {917--963},
title = {{Deep learning for time series classification: a review}},
volume = {33},
year = {2019}
}

