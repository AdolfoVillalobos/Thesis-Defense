journal = {International Journal of Industrial Ergonomics},
keywords = {Accelerometers,Ergonomics,Exposure assessment,Inertial sensors,Wearable sensors},
number = {November 2019},
pages = {102937},
publisher = {Elsevier B.V.},
title = {{A narrative review on contemporary and emerging uses of inertial sensing in occupational ergonomics}},
volume = {76},
year = {2020}
}

